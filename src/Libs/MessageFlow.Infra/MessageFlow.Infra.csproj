	<ItemGroup Label="ProjectReferences">
		<ProjectReference Include="..\MessageFlow.Core\MessageFlow.Core.csproj" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Update="MessageTemplatesResources.resx">
